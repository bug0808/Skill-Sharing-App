<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/blueLightest"
    >
    <TextView
        android:id="@+id/welcomeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to the App!"
        android:textSize="24sp"
        android:layout_centerInParent="true" />

    <TextView
        android:id="@+id/connectTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/welcomeTextView"
        android:layout_marginTop="90dp"
        android:layout_centerHorizontal="true"
        android:text="Connect with"
        android:textSize="14sp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/emailCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/connectTextView"
        android:layout_marginTop="16dp"
        app:cardElevation="4dp"
        app:cardCornerRadius="18dp">

    <Button
        android:id="@+id/emailConnect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/blueBase"
        android:textColor="@color/blueLight"
        android:text="Email" />
</androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/facebookCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/emailCardView"
        android:layout_marginTop="16dp"
        app:cardElevation="4dp"
        app:cardCornerRadius="18dp">
    <Button
        android:id="@+id/facebookConnect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/blueLight"
        android:textColor="@color/blueBase"
        android:text="Facebook" />
</androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/reviewbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="go to review" />

</RelativeLayout>
