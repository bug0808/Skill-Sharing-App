<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blueLightest"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="DoIT"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/blueBase"
            android:padding="16dp"
            android:background="@android:color/transparent" />

        <TextView
            android:id="@+id/similarity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Users with similar skills!"
            android:textSize="14sp"
            android:textColor="@color/blueBase"
            android:background="@android:color/transparent" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/simRec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:background="@color/blueLight" />

        <TextView
            android:id="@+id/opposite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Explore more skills!"
            android:textSize="14sp"
            android:textColor="@color/blueBase"
            android:background="@android:color/transparent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/oppRec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:background="@color/blueLight" />

    </LinearLayout>
</ScrollView>
