<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="LoginButtonStyle">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:elevation">8dp</item>
        <item name="android:translationZ">4dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:layout_marginLeft">-8dp</item>
        <item name="android:layout_marginRight">-8dp</item>
    </style>

    <style name="BubbleEditText">
        <item name="android:background">@drawable/bubble_input</item>
        <item name="android:padding">12dp</item> <!-- Inner padding -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item> <!-- Top margin -->
    </style>
</resources>